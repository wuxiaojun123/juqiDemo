<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#66000000">

        <TextView
            android:id="@+id/withdraw_back_to_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/back_to_pre"
            android:text="@string/back_txt"
            android:textColor="@color/choosetextcolor"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_withdraw"
            android:textColor="@color/choosetextcolor"
            android:textSize="@dimen/large_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/withdraw_box1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp">

            <cn.com.sfn.juqi.widgets.CircleImageView
                android:id="@+id/withdraw_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="7dp"
                android:contentDescription="@string/image_description" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/withdraw_avatar"
                android:contentDescription="@string/image_description" />
        </RelativeLayout>

        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl1"
            android:textColor="@color/manage_pay"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/is_authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/next_page"
            android:text="@string/hint25"
            android:textColor="@color/editcolor"
            android:textSize="@dimen/small_middle_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wihdraw_box2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/my_balance"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/my_balance_txt"
                style="@style/PersonalRightIconStyle"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                style="@style/PersonalTextStyle"
                android:layout_toLeftOf="@id/my_balance_txt"
                android:text="@string/cash_unit"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/small_middle_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/my_income"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/my_income_txt"
                style="@style/PersonalRightIconStyle"
                android:src="@drawable/next_page"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                style="@style/PersonalTextStyle"
                android:layout_toLeftOf="@id/my_income_txt"
                android:text="@string/cash_unit"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/small_middle_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/withdraw_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/manage_option_cancel"
        android:gravity="center"
        android:text="@string/my_withdraw"
        android:textColor="@color/manage_pay"
        android:textSize="@dimen/medium_text_size" />

</LinearLayout>