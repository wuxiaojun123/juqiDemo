<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cn.com.sfn.example.juqi.AchieveActivity" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#66000000" >

        <TextView
            android:id="@+id/id_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/back_to_pre"
            android:drawablePadding="5dp"
            android:text="@string/back_txt"
            android:textColor="@color/choosetextcolor"
            android:textSize="@dimen/dimens_my_accomplishments" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_obtain"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/signleftunpressed"
                android:text="@string/my_accomplishments_already_obtain"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/dimens_my_accomplishments" />

            <Button
                android:id="@+id/btn_not_obtain"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/signleftunpressed"
                android:text="@string/my_accomplishments_not_obtain"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/dimens_my_accomplishments" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/canyu_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/img_bg_not_obtain"
            android:gravity="center"
            android:text="@string/canyu_ac"
            android:textColor="@color/manage_pay"
            android:textSize="@dimen/dimens_my_accomplishments_achieve" />

        <Button
            android:id="@+id/zuzhi_btn"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/img_bg_chengjiu_btn"
            android:gravity="center"
            android:text="@string/zuzhi_ac"
            android:textColor="@color/manage_pay"
            android:textSize="@dimen/dimens_my_accomplishments_achieve" />
    </LinearLayout>

    <ListView
        android:id="@+id/id_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:scrollbarStyle="@null"
        android:scrollbars="@null"
        android:dividerHeight="10dp"
         />

</RelativeLayout>