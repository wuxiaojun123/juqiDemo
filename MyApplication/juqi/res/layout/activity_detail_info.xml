<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#66000000" >

            <TextView
                android:id="@+id/back_to_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/back_to_pre"
                android:text="@string/back_txt"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/detail_information"
                android:textColor="@color/choosetextcolor"
                android:textSize="@dimen/large_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/avatar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box1" >

            <TextView
                android:id="@+id/avatar_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/detail_avatar"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/medium_text_size" />

            <cn.com.sfn.juqi.widgets.CircleImageView
                android:id="@+id/info_avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/avatar_txt"
                android:contentDescription="@string/image_description" />

            <ImageView
                style="@style/PersonalRightIconStyle"
                android:contentDescription="@string/image_description"
                android:src="@drawable/next_page" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box2"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_name"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/name_txt"
                    android:background="@null"
                    android:hint="@string/hint9"
                    android:inputType="text"
                    android:textColor="@color/editcolor"
                    android:textColorHint="@color/editcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sex_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/gender_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_gender"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/gender_txt"
                    android:text="@string/gender_hint"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/age_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_age"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/age_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/age_txt"
                    android:background="@null"
                    android:hint="@string/hint5"
                    android:inputType="number"
                    android:textColor="@color/editcolor"
                    android:textColorHint="@color/editcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/game_age_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_game_age"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/game_age_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/game_age_txt"
                    android:background="@null"
                    android:hint="@string/hint5"
                    android:inputType="number"
                    android:textColor="@color/editcolor"
                    android:textColorHint="@color/editcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/game_age_detail"
                    android:text="@string/game_age_unit"
                    android:textColor="@color/editcolor"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/height_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_height"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/height_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/height_txt"
                    android:background="@null"
                    android:hint="@string/hint5"
                    android:inputType="number"
                    android:textColor="@color/editcolor"
                    android:textColorHint="@color/editcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/height_detail"
                    android:text="@string/height_unit"
                    android:textColor="@color/editcolor"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/weight_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_weight"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/weight_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/weight_txt"
                    android:background="@null"
                    android:hint="@string/hint5"
                    android:inputType="number"
                    android:textColor="@color/editcolor"
                    android:textColorHint="@color/editcolor"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/weight_detail"
                    android:text="@string/weight_unit"
                    android:textColor="@color/editcolor"
                    android:textSize="@dimen/small_medium_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box3"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/offense_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/offense_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_offense"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/detail_offense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/offense_txt"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/detail_offense"
                    android:text="@string/skill_unit"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/defense_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/defense_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_defense"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/detail_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/defense_txt"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/detail_defense"
                    android:text="@string/skill_unit"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zonghe_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/zonghe_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_zonghe"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/detail_zonghe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/zonghe_txt"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/detail_zonghe"
                    android:text="@string/skill_unit"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box4"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/level_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/level_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_level"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/detail_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/level_txt"
                    android:text="@string/hint15"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/role_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/role_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/detail_role"
                    android:textColor="@color/manage_pay"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/detail_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/role_txt"
                    android:text="@string/hint16"
                    android:textColor="@color/choosetextcolor"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    style="@style/PersonalRightIconStyle"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/next_page" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box1" >

            <TextView
                android:id="@+id/gexing_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="@string/state_massage"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/medium_text_size" />

            <EditText
                android:id="@+id/gexing_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/gexing_txt"
                android:background="@null"
                android:hint="@string/gexing_hint"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textColor="@color/editcolor"
                android:textColorHint="@color/editcolor"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/small_medium_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/person_info_box5" >

            <TextView
                android:id="@+id/zhanji_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="@string/military_exploits"
                android:textColor="@color/manage_pay"
                android:textSize="@dimen/medium_text_size" />

            <EditText
                android:id="@+id/zhanji_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/zhanji_txt"
                android:background="@null"
                android:hint="@string/zhanji_hint"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textColor="@color/editcolor"
                android:textColorHint="@color/editcolor"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/small_medium_text_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/info_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/manage_option_cancel"
            android:gravity="center"
            android:text="@string/info_confirm"
            android:textColor="@color/manage_pay"
            android:textSize="@dimen/medium_text_size" />
    </LinearLayout>

</ScrollView>