<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/manage_box_two"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp" >

            <TextView
                android:id="@+id/certificate_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp" >

            <TextView
                android:id="@+id/certificate_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/editcolor"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/certificate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/certificate_list_date"
                android:textColor="@color/editcolor"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/certificate_during"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/certificate_time"
                android:textColor="@color/editcolor"
                android:textSize="@dimen/small_middle_text_size" />
        </RelativeLayout>
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp" >

            <TextView
                android:id="@+id/certificate_list_place"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/editcolor"
                android:textSize="@dimen/small_middle_text_size" />

            <TextView
                android:id="@+id/certificate_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/halfwhite"
                android:textSize="@dimen/small_middle_text_size" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/qr_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="@string/qr"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/medium_text_size" />
        <TextView
            android:id="@+id/certificate_match_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="@string/cer_match"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/medium_text_size" />
    </LinearLayout>

</LinearLayout>